   <?php
$libro="";
If ($_SERVER["REQUEST_METHOD"] == "GET")
{
   if(!empty($_GET["textobusqueda"]))
    {   $Libro = test_input($_GET["textobusqueda"]);}
}
fuction test_input ($data)
{
    $data = trim($data);
    $data = stripslashes($data);
    $data = htmlspecialchars($data);
    return $data;
}
   //Conectamos con la base de datos 
    $connection = mysqli_connect("localhost","root","","biblioteca-virtual");
    //verificamos la conecxion
    if(mysqli_connect_errno()) 
       echo "No se pudo conectar con la base de datos".mysqli_error();

   $sql = "SLECT * FROM Libro WHERE titulo = ".$Libro." or autor = "
   .$Libro."or genero = ".$Libro;
   $res = mysqli_query($connection,$sql);
   echo "<table border = '2'>
        <tr>
        <th>ISBN</th>
        <th>Nombre Archivo</th>
        <th>Titulo</th>
        <th>Autor</th>
        <th>Area</th>
        <th>Version</th>
        <th>Anio Edicion</th>
        </tr>";
    
    while ( $row = mysqli_fetch_array($res)) {

        echo "<tr>";
        echo "<td>".$row['isbn']."</td>";
        echo "<td>".$row['nombre_Archivo']."</td>";
        echo "<td>".$row['titulo']."</td>";
        echo "<td>".$row['autor']."</td>";
        echo "<td>".$row['genero']."</td>";
        echo "<td>".$row['version']."</td>";
        echo "<td>".$row['anio_edicion']."</td>";
        echo "</tr>";
    }
    echo "</table>";
   mysql_close($connection);
?>
